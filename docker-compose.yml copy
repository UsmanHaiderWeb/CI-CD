version: "1"

services:
  backend:
    container_name: "backend"
    build:
      context: ./CI-CD-Backend
      dockerfile: Dockerfile
    environment:
      - PORT=5000
    command: ["npm", "run", "dev"]
    expose:
      - 5000
    restart: "always"
    networks:
      - my-net
  
  nginx:
    image: nginx:stable
    container_name: "nginx"
    ports:
      - 80:80
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
      - ./CI-CD-Frontend:/usr/share/nginx/html
    depends_on:
      - backend
    networks:
      - my-net

networks:
  my-net:
    driver: bridge